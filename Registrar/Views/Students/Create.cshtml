@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h1>Add a New Student</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.StudentName)
  @Html.TextBoxFor(model => model.StudentName, new { @class="form-control", required="required" })

  @Html.LabelFor(model => model.DateOfEnrollment)
  @Html.TextBoxFor(model => model.DateOfEnrollment, new { @type="date", @class="form-control", required="required" })

  <input type="submit" class="btn btn-default" value="Add a Student" />
}

<p>@Html.ActionLink("Show all Students", "Index")</p>