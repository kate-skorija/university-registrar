@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>There are no students added to this list yet.</h3>
}

@foreach(Student student in Model)
{
  <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</li>
}

<p>@Html.ActionLink("Add a new student record", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>